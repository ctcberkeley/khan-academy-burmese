-#view for admins
%html
  %head
    = stylesheet_link_tag 'videos'
  %body
    = render :partial => "shared/dashhead"
    
    .container
      .content
        .panel.panel-info{:id => "list_table"}
          .panel-heading
            %h4 Assign video - #{@video.course}, #{@video.title} to:
          .panel-body
            %ul.list-group
              - @users.each do |user|
                .list-group-item.h5 
                  = user.name
                  ,
                  = user.email
                  | 
                  = link_to 'Assign as Typer', "/users/#{user.id}/videos/#{@video.video_id}/assign_typer" , :id => "#{user.id}_type_#{@video.video_id}", :class => "assign_other_btn", :method => 'post'