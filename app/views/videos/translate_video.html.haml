
%html

  %head
    = stylesheet_link_tag 'videos'
  %body
    = render :partial => "shared/dashhead"
    = render :partial => "shared/nav"
    
    .table-container
      .row
        .col-md-12
          .col-md-12.col-sm-12.col-xs-12
            .panel.panel-success{:id => "list_table"}
              .panel-heading
                Video Details
              .panel-body
                %ul.list-group
                  .list-group-item.h5= "Subject: #{@video.subject}"
                  .list-group-item.h5= "Course: #{@video.course}"
                  .list-group-item.h5= link_to "Title: #{@video.title}", "#"




            .panel.panel-info{:id => "list_table"}
              .panel-heading
                Video Status
              .panel-body
                .list-group
                  .list-group-item.h5= "Assigned to: #{@user.name}"
                  .list-group-item.h5= "Due Date: #{@video.due_date}"
                  .list-group-item
                    .bs-example 
                      .btn-group
                        %button_to.btn.btn-default.active Digital Translation
                        %button_to.btn.btn-default= link_to "Handwritten Translation", translate_video_handwritten_path()
                  .list-group-item
                    %button_to.btn.btn-info= link_to("Translate Using Amara", "http://www.amara.org/en/videos/#{@video.video_id}",{:style=> 'color:white;', :target => "_blank", :confirm => "When you are finished using Amara, be sure to come back to KhanAcademy Translations Portal to submit #{@video.title} for QA."})
                  .list-group-item
                    %button_to.btn.btn-danger= link_to "Unassign Me", unassign_translator_path(:id => @user.id, :video_id => @video.video_id),{:style=> 'color:white;', :confirm => "Are you sure you want to unassign #{@video.title} as your video?", :method => :post}
  
                  %h4 Available ---> Translate ---> Digitize ---> QA ---> Complete
                  .col-md-10
                    .progress.progress-striped.active
                      .progress-bar{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "45", role: "progressbar", style: "width: 50%"}
                        %span.sr-only

                  %button_to.btn.btn-primary= link_to "Ready for QA",set_digital_translate_complete_path(),{:style=> 'color:white;', :confirm => "Are you sure #{@video.title} has been propery translated and submitted on Amara?", :method => :post}




                


    

