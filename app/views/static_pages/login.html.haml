!!!
%html
    %head
        %link{:rel=>"shortcut icon", :href=>"../../assets/ico/favicon.png"}
        %link{:type=>"text/css", :rel=>"stylesheet", :href=>"assets/bootstrap.css"}

    %body
        .container
            .masthead
                %h3.text-muted Khan Academy Burmese Translation
                %ul.nav.navbar.nav-justified
                    %li.active 
                        %a{:href=>"/"}Home
                    %li
                        %a{:href=>"/login_page"}Login
                    %li
                        %a{:href=>"/about"}About
                    %li
                        %a{:href=>"/contact"}Contact
    .container
        .row-fluid
            .span12
                .span6
                    .area
                        %form.form-horizontal{:action=>"login", :method=>"post"}
                            .heading
                                %h4.form-heading Sign In
                            .control-group
                                %label.control-label{:for=>"inputUsername"} Username
                                .controls
                                    %input#inputUsername{:type=>"text", :name=>"email"}
                            .control-group
                                %label.control-label{:for=>"loginPassword"} Password
                                .controls
                                    %input#loginPassword{:placeholder=>"Min. 6 Characters", :type=>"password", :name=>"password"}
                            .control-group
                                .controls
                                    %label.checkbox
                                        %input{:type=>"checkbox"} Keep me signed in 
                                        %a.btn.btn-link{:href=>"#"} Forgot my password
                                    %button.btn.btn-success{:type=>"submit"} Sign In
                                    %button.btn{:type=>"button"} Help
                .span6
                    .area
                        %form.form-horizontal{:action=>"users", :method=>"post"}
                            .heading
                                %h4.form-heading Sign Up
                            .control-group
                                %label.control-label{:for=>"inputFirst"} First Name
                                .controls
                                    %input#inputFirst{:name=>"firstName", :type=>"text"}
                            .control-group
                                %label.control-label{:for=>"inputLast"} Last Name
                                .controls
                                    %input#inputLast{:name=>"lastName", :type=>"text"}
                            .control-group
                                %label.control-label{:for=>"inputEmail"} Email
                                .controls
                                    %input#inputEmail{:name=>"email", :type=>"text"}
                            .control-group
                                %label.control-label{:for=>"inputUsername"} Username
                                .controls
                                    %input#inputUsername{:type=>"text", :name=>"email"}
                            .control-group
                                %label.control-label{:for=>"loginPassword"} Password
                                .controls
                                    %input#loginPassword{:placeholder=>"Min. 6 Characters", :type=>"password", :name=>"password"}

                            .control-group
                                .controls
                                    %label.checkbox
                                        %input{:type=>"checkbox"} I agree all your 
                                        %a{:href=>"#"} Terms of Services
                                    %button.btn.btn-success{:type=>"submit"} Sign Up
                                    %button.btn{:type=>"button"} Help
                                    
                                    %p= link_to "log in with google", user_omniauth_authorize_path(:google_oauth2)
                                
    .footer
        %p Khan Academy Burmese
