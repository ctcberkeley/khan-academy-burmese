-# User profile page

%html
  %head
    = stylesheet_link_tag 'users'
  %body
    = render :partial => "shared/dashhead"
 
    %div.profile
      %h1 Update account for #{@user.name}

      = form_tag user_path(@user), :method => :put do

        = label :user, :name, 'Name'
        = text_field :user, 'name'
        %br
        %br
        = label :user, :email, 'Email'
        = text_field :user, 'email'
        %br
        %ul.profile_actions
          %li
            = link_to 'Change password', change_password_path(@user), :method => :get
          %li
            = submit_tag 'Update Account Info'
