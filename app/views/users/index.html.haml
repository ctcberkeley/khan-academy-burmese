-#  This file is app/views/movies/index.html.haml
%h1 All users (for admins)

%center
  %table#users
    %thead
      %tr
        %th Name
        %th Email
        %th Actions
    %tbody
      - @users.each do |user|
        %tr
          %td= user.name
          %td= user.email
          %td= button_to 'Delete', user_path(user), :method => :delete, :confirm => 'Are you sure?'
