-# View to change current password

%html
  %head
    = stylesheet_link_tag 'users'
  %body
    = render :partial => "shared/dashhead"

    %div.profile
      %h1 Change password

      = form_tag update_password_path(@user), :method => :put do

        = label_tag :user, 'Current password'
        = password_field_tag :current
        %br
        = label :user, 'New password'
        = password_field_tag :new
        %br  
        = label :user, 'Confirm new password'
        = password_field_tag :confirmation
        %br  
        = submit_tag 'Update password'
